<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="com.zwenex.ayoe.yangonshelf.Adapters.DataBindingHelpers"/>
        <variable name="book" type="com.zwenex.ayoe.yangonshelf.Models.Book"/>
    </data>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.zwenex.ayoe.yangonshelf.Profile.BorrowedBooksActivity">
        <android.support.v4.widget.SwipeRefreshLayout
            android:id="@+id/borrowed_swipe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.v7.widget.RecyclerView
                android:id="@+id/borrowed_recycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </android.support.v4.widget.SwipeRefreshLayout>
    </LinearLayout>
</layout>
